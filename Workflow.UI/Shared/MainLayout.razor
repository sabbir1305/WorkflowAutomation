@inherits LayoutComponentBase
@using MudBlazor

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudText Typo="Typo.h6" Class="ml-4">Workflow Automation</MudText>
        <MudTabs Class="ml-4">
            <MudTabPanel Text="Workflows" Icon="@Icons.Material.Filled.List" Link="/" />
            <MudTabPanel Text="Create" Icon="@Icons.Material.Filled.Add" Link="/create" />
            <MudTabPanel Text="Counter" Icon="@Icons.Material.Filled.Calculate" Link="/counter" />
            <MudTabPanel Text="Fetch Data" Icon="@Icons.Material.Filled.Cloud" Link="/fetchdata" />
        </MudTabs>
    </MudAppBar>

    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always">
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.List">Workflows</MudNavLink>
            <MudNavLink Href="/create" Icon="@Icons.Material.Filled.Add">Create Workflow</MudNavLink>
            <MudNavLink Href="/counter" Icon="@Icons.Material.Filled.Calculate">Counter</MudNavLink>
            <MudNavLink Href="/fetchdata" Icon="@Icons.Material.Filled.Cloud">Fetch Data</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="p-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
