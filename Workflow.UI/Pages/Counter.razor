@page "/counter"


<MudPaper Elevation="2" Class="p-4">
    <MudText Typo="Typo.h5">Counter</MudText>
    <MudText>Current count: @currentCount</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>
</MudPaper>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
